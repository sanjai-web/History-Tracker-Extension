{
  "manifest_version": 3,
  "name": "History Tracker",
  "version": "1.0.0",
  "description": "Track and record every website link you visit with timestamps and export to PDF",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "update_url": "https://edge.microsoft.com/extensionwebstorebase/v1/crx"
}